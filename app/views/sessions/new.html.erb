<h1>Log in</h1>

<%= form_with model: @user, url: session_path do |form| %>
  <% if @user.errors.any? %>
    <div class="error">
        <% @user.errors.full_messages.each do |message| %>
            - <%= message %></br>
        <% end %>
    </div>
  <% end %>
  <div class="col-auto mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="col-auto mb-3">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <div class="col-auto mb-3">
    <%= form.submit "Log in", class: "btn btn-primary" %>
  </div>
  <%= link_to "Forgot your password?", new_password_reset_path %>
<% end %>

<hr>
<h2 class="">Use Identity Providers</h2>
<div class="d-flex align-items-center justify-content-between my-4">
  <div class="col-auto">
    <%= button_to "Sign In with Github", "/auth/github", method: :post, data:{turbo: "false"}, class: "btn btn-secondary" %>
  </div>
  <div class="col-auto">
    <%= button_to "Sign In with Twitter", "/auth/twitter2", data:{"turbo-method": :post, turbo: "false"}, method: :post, class: "btn btn-secondary" %>
  </div>
  <div class="col-auto">
    <%= button_to "Sign In with Google", "/auth/google_oauth2", data:{"turbo-method": :post, turbo: "false"}, method: :post, class: "btn btn-secondary" %>
  </div>
  <div class="col-auto">
    <%= button_to "Sign In with Twitch", "/auth/twitch", data:{"turbo-method": :post, turbo: "false"}, method: :post, class: "btn btn-secondary" %>
  </div>
  <div class="col-auto">
    <%= button_to "Sign In with Discord", "/auth/discord", data:{"turbo-method": :post, turbo: "false"}, method: :post, class: "btn btn-secondary" %>
  </div>
</div>

