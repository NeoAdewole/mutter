<h1>Update Password</h1>

<%= form_with model: current_user, url: password_path do |form| %>
  <%= render "shared/form_errors", form: form%>

  <div class="col-auto mb-3">
    <%= form.label :password_challenge, "Current Password", class: "form-label" %>
    <%= form.password_field :password_challenge, class: "form-control"  %>
  </div>

  <div class="col-auto mb-3">
    <%= form.label :password, "New Password", class: "form-label" %>
    <%= form.password_field :password, class: "form-control"  %>
  </div>

  <div class="col-auto mb-3">
    <%= form.label :password_confirmation, class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control"  %>
  </div>

  <div class="col-auto mb-3">
    <%= form.submit "Update password", class: "btn btn-primary mb-3" %>
  </div>

<% end %>
