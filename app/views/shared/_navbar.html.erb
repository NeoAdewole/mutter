<div class="container mx-auto px-4">
  <nav class="navbar bg-base-300">
    
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="main-nav">
        <%= link_to "Mutter", root_path, class: "navbar-brand" %>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Twitter Accounts", twitter_accounts_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Tweets", tweets_path, class: "nav-link" %>
          </li>
        </ul>
        <ul class="navbar-nav align-middle">
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to (Current.user.username || "Profile")+":", edit_registration_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Edit password", edit_password_path, class: "nav-link" %></li>
            <li class="nav-item"><%= button_to "Log out", session_path, method: :delete, class: "btn btn-outline-secondary"%></li>
          <% else %>
            <li class="nav-item"><%= link_to "Sign Up", new_registration_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Log In", new_session_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
  </nav>
</div>
